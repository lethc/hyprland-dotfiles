{
    "layer": "bottom",
    "position": "bottom",

    "mod": "dock",
    "exclusive": true,
    "gtk-layer-shell": true,
    "margin-bottom": -1,
    "passthrough": false,

    "height": 41, // First Difference
    "modules-left": [
        "custom/os_button",
        "hyprland/workspaces",
        "wlr/taskbar"
    ],
    "custom/os_button": {
        "format": "󱗆",
        "on-click": "rofi -show drun",
        "on-click-right": "pkill rofi",
        "tooltip": false
    },
    "hyprland/workspaces": {
        "icon-size": 32,
        "spacing": 16,
        "format": "{icon}",
        "all-outputs": true,
        "format-icons": {
            "A:Web": "  Web",
            "B:Editor": "󰞇  Editor",
            "C:Term": "󱓹  Term",
            "D:Book": "  Book",
            "E:Multimedia": "  Multimedia",
            "F:System": "󱉏  System",
            "G:Office": "  Office",
            "H:Other": "󰨈  Other"
        }
        // "on-scroll-up": "hyprctl dispatch workspace r+1"
        // "on-scroll-down": "hyprctl dispatch workspace r-1"
    },
    "wlr/taskbar": {
        "format": "{icon} {title:.17}",
        "icon-size": 28,
        "spacing": 3,
        "on-click-middle": "close",
        "on-click-right": "hyprctl dispatch setfloating && hyprctl dispatch resizeactive exact 1480 750; hyprctl dispatch centerwindow 1",
        "tooltip-format": "{title}",
        "ignore-list": [],
        "on-click": "activate"
    },
    "modules-center": [],
    "modules-right": [
        "group/window_management",
        "tray",
        "cpu",
        "memory",
        "disk",
        //"pulseaudio",
        "group/audio",
        "custom/notifications",
        "network",
        "battery",
        // "hyprland/language",
        "clock"
    ],
    "group/window_management": {
        "orientation": "inherit",
        "modules": [
            "group/buttons"
        ]
    },
    "group/buttons": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": false
        },
        "modules": [
            // "custom/bfloat",
            "custom/bmax",
            "custom/bclose",
            "custom/bfloatall",
            "custom/bfullmax"
            // "custom/bcentre"
        ]
    },
    // "custom/bfloat": {
    //     "format": "",
    //     "on-click": "hyprctl dispatch togglefloating && hyprctl dispatch resizeactive exact 1480 750; hyprctl dispatch centerwindow 1",
    //     "tooltip-format": "Toggle floating"
    // },
    // "custom/bcentre": {
    //     "format": "",
    //     "on-click": "hyprctl dispatch resizeactive exact 1480 750; hyprctl dispatch centerwindow 1",
    //     "tooltip-format": "Centre window"
    // },
    "custom/bmax": {
        "format": "",
        "on-click": "hyprctl dispatch fullscreen 1",
        "tooltip-format": "Toggle maximized"
    },
    "custom/bfullmax": {
        "format": "",
        "on-click": "hyprctl dispatch fullscreen 2",
        "tooltip-format": "Toggle full-maximized"
    },
    "custom/bclose": {
        "format": "",
        "on-click": "hyprctl dispatch killactive",
        "tooltip-format": "Close Window"
    },
    "custom/bfloatall": {
        "format": "",
        "on-click": "~/.config/hypr/scripts/default/float_window_toggle",
        "tooltip-format": "Toggle all floating windows"
    },
    "tray": {
        "icon-size": 18,
        "spacing": 8
    },
    "group/audio": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": false
        },
        "modules": [
            "pulseaudio",
            "pulseaudio#mic"
            // "pulseaudio/slider"
        ]
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-bluetooth": "{icon}",
        "tooltip-format": "{volume}% {icon} | {desc}",
        "format-muted": "󰖁",
        "format-icons": {
            "headphones": "󰋌",
            "handsfree": "󰋌",
            "headset": "󰋌",
            "phone": "",
            "portable": "",
            "car": " ",
            "default": [
                "󰕿",
                "󰖀",
                "󰕾"
            ]
        },
        "on-click": "volume mute",
        "on-click-middle": "pavucontrol-qt",
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
        "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%",
        "smooth-scrolling-threshold": 1
    },
    "pulseaudio#mic": {
        "format": "{format_source}",
        "format-source": "",
        "format-source-muted": " ",
        "tooltip-format": "{volume}% {format_source} ",
        "on-click": "pactl set-source-mute 0 toggle",
        "on-scroll-down": "pactl set-source-volume 0 -1%",
        "on-scroll-up": "pactl set-source-volume 0 +1%"
    },
    "pulseaudio/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal"
    },
    "cpu": {
        "interval": 5,
        "format": "  {usage}%",
        "max-length": 10
    },
    "temperature": {
        "hwmon-path-abs": "/sys/devices/platform/coretemp.0/hwmon",
        "input-filename": "temp2_input",
        "critical-threshold": 75,
        "tooltip": false,
        "format-critical": "({temperatureC}°C)",
        "format": "({temperatureC}°C)"
    },
    "memory": {
        "interval": 10,
        "format": "  {percentage}%",
        "max-length": 10,
        "tooltip": true,
        "tooltip-format": "RAM - {used:0.1f}GiB used"
    },
    "disk": {
        "interval": 30,
        "format": "󰋊 {percentage_used}%",
        "path": "/",
        "tooltip": true,
        "unit": "GB",
        "tooltip-format":  "Available {free} of {total}"
    },
    "custom/notifications": {
        "format": "󰂞 ",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -t -sw",
        "tooltip": false
    },
    "network": {
        "format": "{icon}",
        "format-icons": {
            "wifi": [
                "󰤨 "
            ],
            "ethernet": [
                "󰈀 "
            ],
            "disconnected": [
                "󰖪 "
            ]
        },
        "format-wifi": "󰤨 ",
        "format-ethernet": "󰈀 ",
        "format-disconnected": "󰖪 ",
        "format-linked": "󰈁 ",
        "tooltip": false,
        "on-click-middle": "nm-connection-editor"
    },
    "battery": {
        // "rotate": 270,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}",
        "format-charging": "<b>{icon} </b>",
        "format-full": "<span color='#82A55F'><b>{icon}</b></span>",
        "format-icons": [
            "󰁻",
            "󰁼",
            "󰁾",
            "󰂀",
            "󰂂",
            "󰁹"
        ],
        "tooltip-format": "{timeTo} {capacity} % | {power} W"
    },

    // "hyprland/language": {
    //     "format": "{}",
    //     "format-en": "ENG",
    //     "format-ru": "РУС"
    // },
    "clock": {
        "format": "      {:%R\n %d.%m.%Y}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    }
}
