# ASKN
sudo pacman -S foot foot-terminfo cliphist wl-clip-persist rofi-wayland hyprpaper kitty waybar swaync zoxide lsd bat swww
sudo pacman -S ttf-firacode-nerd ttf-nerd-fonts-symbols ttf-victor-mono-nerd 

# ASK
git clone https://aur.archlinux.org/yay-bin.git ~/Downloads/Git/yay-bin/
