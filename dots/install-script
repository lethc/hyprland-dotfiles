echo "############ SDDM Theme  ###############"
echo "########################################" 

sudo cp -r "${HOME}/.config/hypr/dots/sddm-theme/corners" /usr/share/sddm/themes
sudo cp -r "${HOME}/.config/hypr/dots/sddm-theme/silent" /usr/share/sddm/themes
echo "SDDM themes linked"
sudo ln -sf "${HOME}/.config/hypr/dots/.scripts/zellijs/zs" "/usr/bin/"
echo "zs linked"

# ASKN
yay -S  sddm qt5-graphicaleffects qt5-svg qt5-quickcontrols2

echo "creating sddm.conf.d"
sudo mkdir /etc/sddm.conf.d/

echo "creating sddm.conf.d/config"
touch config ~/Desktop/config
# Set corner theme as default
# echo "[Theme]" > ~/Desktop/config 
# echo "Current=corners" >> ~/Desktop/config
# Set silent theme as default
echo "[General]" > ~/Desktop/config 
echo "GreeterEnvironment=QML2_IMPORT_PATH=/usr/share/sddm/themes/silent/components/,QT_IM_MODULE=qtvirtualkeyboard" >> ~/Desktop/config
echo "[Theme]" >> ~/Desktop/config 
echo "Current=silent" >> ~/Desktop/config
sudo mv ~/Desktop/config /etc/sddm.conf.d/

echo "theme setted correctly"

echo "##############################"
echo "##  Installing ZSH plugins  ##"
echo "##############################" 

echo "Change shell root"
sudo usermod --shell /usr/bin/zsh root
echo "Change shell user"
sudo usermod --shell /usr/bin/zsh $user

echo "########################################"
echo "##  Installing Hyprland dependencies  ##"
echo "########################################" 

# Adding plugins
